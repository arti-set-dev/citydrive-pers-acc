{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "target": "ESNext",
    "strict": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "webpack.config.ts",
    "config",
    "src",
    "eslint.config.ts",
    "stylelint.config.mjs"
  ]
}
